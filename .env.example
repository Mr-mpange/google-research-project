# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=research_system
DB_USER=postgres
DB_PASSWORD=

# Africa's Talking Configuration
AT_USERNAME=sandbox
AT_API_KEY=your_africastalking_api_key
AT_SHORTCODE=your_shortcode
AT_VOICE_NUMBER=your_voice_number

# Organization Details (for SMS)
ORGANIZATION_NAME=Your Organization Name
CONTACT_PHONE=+254700000000
CONTACT_EMAIL=contact@yourorg.com

# USSD Configuration
USSD_CODE=*384*34153#
USSD_SERVICE_CODE=*384*34153#

# Google Gemini AI Configuration
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_VISION_MODEL=gemini-1.5-flash

# Speech-to-Text Configuration
STT_SERVICE=google
# Alternative: STT_SERVICE=openai (deprecated)
GOOGLE_CLOUD_KEY_FILE=path/to/google-credentials.json
GOOGLE_PROJECT_ID=your_google_project_id

# OpenAI Configuration (fallback/legacy)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50MB

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Voice Configuration
DEFAULT_LANGUAGE=en-US
SUPPORTED_LANGUAGES=en-US,sw-KE
VOICE_TIMEOUT=30
MAX_RECORDING_DURATION=300

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.7
SUMMARY_MAX_LENGTH=500
ENABLE_MULTILINGUAL=true