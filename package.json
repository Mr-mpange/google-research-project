{
  "name": "voice-ussd-research-system",
  "version": "1.0.0",
  "description": "AI-powered Voice and USSD Research Information System using Africa's Talking APIs",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:redis": "node test-redis.js",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "create-admin": "node create-admin.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "worker:ai": "node src/workers/aiWorker.js",
    "redis:start": "docker-compose -f docker-compose.redis.yml up -d",
    "redis:stop": "docker-compose -f docker-compose.redis.yml down",
    "redis:logs": "docker-compose -f docker-compose.redis.yml logs -f",
    "docker:build": "docker build -t research-system .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy": "pm2 start ecosystem.config.js",
    "deploy:stop": "pm2 stop ecosystem.config.js",
    "deploy:restart": "pm2 restart ecosystem.config.js",
    "backup:db": "pg_dump $DB_NAME > backups/db_$(date +%Y%m%d_%H%M%S).sql",
    "restore:db": "psql $DB_NAME < $1"
  },
  "keywords": [
    "ussd",
    "voice",
    "ivr",
    "research",
    "ai",
    "africa-talking",
    "speech-to-text",
    "nlp"
  ],
  "author": "Research System Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "africastalking": "^0.7.4",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "redis": "^5.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
